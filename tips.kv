            theme_text_color: 'Custom'
            text_color: [1, 1, 1, 1]
            on_press:
                root.manager.current = 'tips'
                root.manager.transition.direction = 'right'

        BoxLayout:
            size_hint_y: .87
            pos_hint: {'center_y':.46}
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.01
                Rectangle:
                    pos: self.pos
                    size: self.size
            ScrollView:
                MDList:
                    #1
                    OneLineListItem:
                        text: '1. Время не безграничный товар.'
                        on_release:
                            root.manager.current = 'btip1'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #2
                    OneLineListItem:
                        text: '2. Талант переоценен.'
                        on_release:
                            root.manager.current = 'btip2'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #3
                    OneLineListItem:
                        text: '3. Мы более продуктивны по утрам. '
                        on_release:
                            root.manager.current = 'btip3'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #4
                    OneLineListItem:
                        text: '4. Социальные медиа - это не карьера.'
                        on_release:
                            root.manager.current = 'btip4'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #5
                    OneLineListItem:
                        text: '5. Перестаньте прятаться за компьютером.'
                        on_release:
                            root.manager.current = 'btip5'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #6
                    OneLineListItem:
                        text: '6. Приезжайте первым и уезжайте последним.'
                        on_release:
                            root.manager.current = 'btip6'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #7
                    OneLineListItem:
                        text: '7. Не ждите разрешения прежде, чем что-то сделать.'
                        on_release:
                            root.manager.current = 'btip7'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #8
                    OneLineListItem:
                        text: '8. Возьмите на себя ответственность за свои ошибки.'
                        on_release:
                            root.manager.current = 'btip8'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #9
                    OneLineListItem:
                        text: '9. Хорошая возможность быстро учиться - работать рядом с суперпрофессионалом.'
                        on_release:
                            root.manager.current = 'btip9'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #10
                    OneLineListItem:
                        text: '10. Не стоит слишком часто менять работу.'
                        on_release:
                            root.manager.current = 'btip10'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #11
                    OneLineListItem:
                        text: '11. Не ведитесь на соцпакет. '
                        on_release:
                            root.manager.current = 'btip11'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #12
                    OneLineListItem:
                        text: '12. Нужно прикладывать усилия.'
                        on_release:
                            root.manager.current = 'btip12'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #13
                    OneLineListItem:
                        text: '13. Говорите меньше. '
                        on_release:
                            root.manager.current = 'btip13'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #14
                    OneLineListItem:
                        text: '14. Осваивайте новые технологии. '
                        on_release:
                            root.manager.current = 'btip14'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #15
                    OneLineListItem:
                        text: '15. Социальные связи.'
                        on_release:
                            root.manager.current = 'btip15'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #16
                    OneLineListItem:
                        text: '16. Вам потребуется как минимум три профессиональных наставника.'
                        on_release:
                            root.manager.current = 'btip16'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #17
                    OneLineListItem:
                        text: '17. Чтобы чему-то научиться, нужно постоянно притворяться, будто уже достиг всего.'
                        on_release:
                            root.manager.current = 'btip17'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #18
                    OneLineListItem:
                        text: '18. Меньше твитов - больше книг.'
                        on_release:
                            root.manager.current = 'btip18'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #19
                    OneLineListItem:
                        text: '19. Научитесь экономить.'
                        on_release:
                            root.manager.current = 'btip19'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                    #20
                    OneLineListItem:
                        text: '20. Репутация бесценна.'
                        on_release:
                            root.manager.current = 'btip20'
                            root.manager.transition.direction = 'left'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1

<Biznetip1Screen>
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 0.8
        MDIconButton:
            icon: 'arrow-left-circle'
            pos_hint: {'center_y': .96, 'center_x': .05}
            theme_text_color: 'Custom'
            text_color: [1, 1, 1, 1]
            on_press:
                root.manager.current = 'biznestip'
                root.manager.transition.direction = 'right'

        MDLabel:
            text: '[b][size=24]1. Время не безграничный товар.[/size][/b] \n \n В мире крайне мало 20-летних ребят с "повышенным чувстом срочности". Им кажется, что вся их жизнь и все их по-настоящему крупные успехи еще впереди, а потому пока можно просто походить на конференции стартаперов, поговорить о своих мечтах с друзьями в кафе и т.д. Но время - единственный ресурс, который есть в изобилии у молодежи, и которым явно не стоит разбрасываться, потому что больше его уже никогда не станет. Если вам 20, помните: те возможности, которые есть у вас сегодня, могут не появиться у вас завтра. Поэтому действовать надо незамедлительно.'
            font_size: 20
            halign: 'left'
            padding_x: 10
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            markup: True
